<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/planOptionGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/plan_existing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan With Existing Workers" />

        <RadioButton
            android:id="@+id/plan_selected_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan With Selected Additional Workers" />

        <RadioButton
            android:id="@+id/suggest_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggest Workers To Call In" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/risk_allowance_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" 
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Risk Workers Allowed:" 
            android:layout_gravity="center"/>

    </LinearLayout>

    <TableLayout
        android:id="@+id/task_table_replan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:visibility="gone" >

        <TableRow
